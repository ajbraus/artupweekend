<div class="container">
  <div class="row posts-list">
  	<div class="span5 offset1">
			<img src="<%= @event.img_url %>"/>
		</div>
		<div class="span6">
			<h2><%= @event.name %> </h2>
			<%= raw(youtube_embed(@event.video_url)) if @event.video_url.present? %>
			<div class="lead">
				<div>Date: <strong><%= @event.start_date %> - <%= @event.end_date %> </strong></div>
				<div>Venue: <strong><%= @event.location %></strong></div>
				<%= link_to "Back Artup Weekend #{@event.slug.titleize}", @event.campaign_url, class:"btn btn-large btn-info", target: "_blank" %>
			</div>
		</div>
	</div>
</div>
