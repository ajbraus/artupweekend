<div class="container-fluid">
      <% if @tag.present? %>
        <h1 class='tag-header'># <%= @tag  %></h1>
      <% end %>
  <div class="row-fluid posts-list">
    <div class="span9">
      <div class="lead">post, share, and find collaborative art</div>
      <ul class="posts">
      <% @posts.each do |post| %>
        <li class="clear-both post">
          <div class="row-fluid post-item">
            <div class="span2">
              <div class="vote-count">
                <%= post.plusminus %>
              </div>
              <div class="votes-post">
                <% if user_signed_in? %>
                  <%= link_to vote_up_post_path(post) do %>
                    <p><i class="icon-chevron-up <%= current_user.voted_for?(post) ? 'voted' : 'not-voted' %>"></i></p>
                  <% end %>
                  <% if user_signed_in? && current_user.karma > 100 %>
                    <%= link_to vote_down_post_path(post) do %>
                      <p><i class="icon-chevron-down <%= current_user.voted_against?(post) ? 'voted' : 'not-voted' %>"></i></p>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
            <%= link_to post do %>
              <div class="post-content">
                <strong><%= post.title %></strong>
                <div class="muted medium">
                  <%= auto_link(post.short_body) %>
                </div>
                <div class="small pull-right">
                  <%= post.nice_created_at %>
                </div>            
                <div class="muted pull-right small">
                  <%= post.user.username %>
                </div>
              </div>
            <% end %>
          </div>
        </li>
    <% end %>
    </ul>
    </div>
    <div class="span3">
      <div class="authentication">
        <% if user_signed_in? %>
          <%= link_to 'New Post', new_post_path, class:'btn btn-large btn-warning pull-left' %>
        <% else %>
          <%= link_to "Sign Up", new_registration_path(:user) %> | <%= link_to "Art In", new_session_path(:user) %>
        <% end %>
      </div>           
      <div id="tag_cloud">
        <h3>Tags</h3>
        <% tag_cloud Post.tag_counts, %w[l] do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: "label" %>
        <% end %>
      </div>
    </div>
  </div> 
</div>
<div id="how" class="row how">
  <div class="container">
    <div class="row">
      <h1>How It Works</h1>
        <div>Creative people show up</div>
        <div>They pitch great ideas for works of art, kickstarters, and art businesses</div>
        <div>Everyone gets <span><h2 style="display:inline;">5</h2></span> votes</div>
        <div>Everyone votes for projects they want to see made</div>
        <div>Teams form around the top <span><h2 style="display:inline;">~25</h2></span> projects</div>
        <div>Funds for materials are available based on votes to those pieces</div>
      <blockquote>
        <span><h2 style="display:inline;">48</h2></span> hours later
      </blockquote>
      <div>They pitch again what they did</div>
      <div>Prizes are distributed and a gallery of the art begins.</div>
      <hr>
      <blockquote>
        Total: 54 hours
      </blockquote>
    </div>
  </div>
</div>

