      <div class="navbar navbar-inverse">
        <div class="navbar-inner">
          <% unless params[:action] == "index" %>
            <a class='brand' href='/'>Artup Weekend</a>
          <% end %>
          <ul class="nav pull-right">
            <% if user_signed_in? %>
              <li><span><%= link_to 'New Article', new_post_path, class:'btn btn-warning' %></span>&nbsp;&nbsp;</li>
              <li><h4><%= link_to "#{current_user.username}", user_path(current_user) %> - <%= current_user.karma %>&nbsp;&nbsp;<%= link_to "sign out", destroy_user_session_path, :method => :delete %>&nbsp;&nbsp;|&nbsp;&nbsp;</h4></li>
            <% else %>
              <li><h4><%= link_to "Join", new_registration_path(:user) %>&nbsp;&nbsp;</h4></li> 
              <li><h4><%= link_to "Login", new_session_path(:user) %>&nbsp;&nbsp;|&nbsp;&nbsp;</h4></li>
            <% end %>
            <li><h4><%= link_to "WTF?", faq_path %>&nbsp;&nbsp;|&nbsp;&nbsp;</h4></li>
            <li><h4><%= link_to "t", "http://www.twitter.com/artupweekend" %>&nbsp;&nbsp;</h4></li>
            <li><h4><%= link_to "f", "http://www.facebook.com/artupweekend" %>&nbsp;&nbsp;</h4></li>
            <li><h4><%= link_to "i", "http://instagram.com/artupweekend" %>&nbsp;&nbsp;</h4></li>
            <li><h4><%= link_to "g+", "https://plus.google.com/101596467391423937181", rel: "publisher" %></h4></li>
            
            <li style="margin: 10px 0; color:white;text-shadow:none;">#artupweekend</li>
          </ul>
        </div>  
        <%= bootstrap_flash %>
      </div>

      <%= yield %>

      <footer>
        <div class='offset1 span11'>
          &#169; 2013 Artup Weekend
        </div>
      </footer>
    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>
